# vi-mode for non-terminal applications

# remap left-control h/j/k/l -> arrow keys
lctrl - h         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- left"
lctrl - j         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- down"
lctrl - k         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- up"
lctrl - l         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- right"

shift + lctrl - h ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift - left"
shift + lctrl - j ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift - down"
shift + lctrl - k ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift - up"
shift + lctrl - l ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift - right"

# remap left-control u / d   -> page up / down
lctrl - u         ![HyperTerm,Terminal,iTerm2]      :   khd -p "pageup"
lctrl - d         ![HyperTerm,Terminal,iTerm2]      :   khd -p "pagedown"

# remap left-control 0 / 4   -> start / end of line
lctrl - 0         ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - left"
lctrl - 4         ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - right"

# remap left-control g / G   -> start / end of text
lctrl - g         ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - up"
lctrl + shift - g ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - down"

shift + lctrl - 0 ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + cmd - left"
shift + lctrl - 4 ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + cmd - right"

# remap left-control b / e   -> start / end of word
lctrl - b         ![HyperTerm,Terminal,iTerm2]      :   khd -p "alt - left"
lctrl - e         ![HyperTerm,Terminal,iTerm2]      :   khd -p "alt - right"

shift + lctrl - b ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + alt - left"
shift + lctrl - e ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + alt - right"

# remap left-control x       -> forward delete
lctrl - x         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- delete"

# disable trackpad
# lctrl + shift - .                                   :   khd -p "- option - option - option - option - option"

# Enable kwm compatibility mode
khd kwm on

# set color of default mode
khd mode default color 0xFFebdbb2

# Enable the prefix mode
khd mode prefix prefix on
khd mode prefix timeout 1
khd mode prefix restore default
khd mode prefix color 0xFFfb4934

# Activate prefix mode
prefix + cmd - r            :    khd -e "reload"

# Activate prefix mode
alt - space                 :    khd -e "mode activate prefix"

# Quit Kwm
prefix + cmd - q     :    kwmc quit

# Set Space Tiling Mode To BSP
prefix - a           :    kwmc space -t bsp

# Set Space Tiling Mode To Monocle
prefix - s           :    kwmc space -t monocle

# Set Space Tiling Mode To Floating
prefix - d           :    kwmc space -t float

# Rotate Window-Tree By 90degrees (Clockwise)
prefix - r           :    kwmc tree rotate 90

# Resize Container
prefix + alt - h               :    kwmc window -c expand 0.05 west
prefix + alt - j               :    kwmc window -c expand 0.05 south
prefix + alt - k               :    kwmc window -c expand 0.05 north
prefix + alt - l               :    kwmc window -c expand 0.05 east

prefix + ctrl - h       :    kwmc window -c reduce 0.05 west
prefix + ctrl - j       :    kwmc window -c reduce 0.05 south
prefix + ctrl - k       :    kwmc window -c reduce 0.05 north
prefix + ctrl - l       :    kwmc window -c reduce 0.05 east

# Set Temporary Window Container
prefix - f               :    kwmc window -z fullscreen
prefix - p               :    kwmc window -z parent
prefix - w               :    kwmc window -t focused

# Give Focus To Window
alt - h            :    kwmc window -f west
alt - l            :    kwmc window -f east
alt - j            :    kwmc window -f south
alt - k            :    kwmc window -f north
# One Handed
alt - w            :    kwmc window -f north
alt - a            :    kwmc window -f west
alt - s            :    kwmc window -f south
alt - d            :    kwmc window -f east

# Give Focus To Screen
alt - 1            :    kwmc display -f 0
alt - 2            :    kwmc display -f 2
alt - 3            :    kwmc display -f 1

# Swap Focused Window
prefix - h           :    kwmc window -s west
prefix - j           :    kwmc window -s south
prefix - k           :    kwmc window -s north
prefix - l           :    kwmc window -s east

# Detach Focused Window And Reinsert In Direction
prefix + shift - k         :    kwmc window -m north
prefix + shift - l         :    kwmc window -m east
prefix + shift - j         :    kwmc window -m south
prefix + shift - h         :    kwmc window -m west

# Move Focused Window To Screen
prefix - 1           :    kwmc window -m display 0
prefix - 2           :    kwmc window -m display 2
prefix - 3           :    kwmc window -m display 1
